<ul data-hook="admin_configurations_sidebar_menu" class="collapse nav nav-pills nav-stacked" id="sidebar-configuration">
  <%= configurations_sidebar_menu_item(Spree.t(:general_settings), edit_admin_general_settings_path) if can? :manage, Spree::Config %>
