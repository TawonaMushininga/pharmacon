<nav id="admin-menu" data-hook>
  <div class="container">
    <div class="sixteen columns main-menu-wrapper">
      <ul data-hook="admin_tabs" class="fullwidth-menu">
        <%= render :partial => 'spree/admin/shared/tabs' %>
      </ul>
    </div>
  </div>
</nav>

<% if request.fullpath.match(/^\/admin\/users/) %>
  <% content_for :sub_menu do %>
    <ul id="sub_nav" class="inline-menu">
      <%= tab :users %>
      <%= tab :gift_cards, :match_path => '/users/gift_cards' %>
    </ul>
  <% end %>
<% end %>
