<footer id="footer" class="pt-2 mx-auto border-top footer-spree" data-hook>
  <div class="container">
    <div class="row d-xl-flex justify-content-xl-around pb-xl-5">
      <div class="d-flex d-xl-block flex-xl-grow-0 col-xl-4">
        <figure class="logo mx-auto mx-xl-0 pt-xl-2 pb-xl-1" data-hook>
          <%= logo %>
        </figure>
        <% if current_store.meta_description %>
          <div class="d-none d-xl-block pt-xl-2 footer-spree-info">
            <%= current_store.meta_description %>
          </div>
        <% end %>
      </div>
      <div class="d-block flex-nowrap py-2 order-xl-last col-xl-3 offset-xl-1">
        <% unless current_store.facebook.blank? && current_store.twitter.blank? && current_store.instagram.blank? %>
          <div class="d-none d-xl-block pt-4 pb-3 pl-2 footer-spree-label">
            <%= Spree.t(:follow_us) %>
          </div>
        <% end %>
        <div class="d-flex d-xl-block justify-content-center mx-auto">
          <div class="d-flex">
            <% unless current_store.facebook.blank? %>
              <%= link_to "https://www.facebook.com/#{current_store.facebook}", target: "_blank", rel: 'nofollow noopener', 'aria-label': Spree.t('go_to_facebook') do %>
                <figure id="facebook" class="px-2" data-hook>
                <%= icon(name: 'facebook',
                        width: 22,
                        height: 22)  %>
                </figure>
              <% end %>
            <% end %>

            <% unless current_store.twitter.blank? %>
              <%= link_to "https://twitter.com/#{current_store.twitter}", target: "_blank", rel: 'nofollow noopener', 'aria-label': Spree.t('go_to_twitter') do %>
                <figure id="twitter" class="px-2" data-hook>
                <%= icon(name: 'twitter',
                        width: 22,
                        height: 22)  %>
                </figure>
              <% end %>
            <% end %>

            <% unless current_store.instagram.blank? %>
              <%= link_to "https://www.instagram.com/#{current_store.instagram}", target: "_blank", rel: 'nofollow noopener', 'aria-label': Spree.t('go_to_instagram') do %>
                <figure id="instagram" class="px-2" data-hook>
                <%= icon(name: 'instagram',
                        width: 22,
                        height: 22)  %>
                </figure>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="py-xl-2 col-xl-3 offset-xl-1">
        <div class="d-none d-xl-block pt-4 pb-3 footer-spree-label">
          <%= Spree.t(:contact_us) %>
        </div>
        <div class="d-flex flex-column align-items-center align-items-xl-start pb-3 flex-grow-2 footer-spree-contact-note">
          <div>
            <%= current_store.name %>,
            2382 Locust Ave<br/>
            Long Beach, CA 90806, USA
          </div>
          <div>Call us now: 760-673-8590</div>
          <% if current_store.mail_from_address %>
            <div><%= Spree.t(:email) %>: <%= current_store.mail_from_address %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row d-none d-xl-flex border-top py-5 text-uppercase footer-spree-menu-links">
      <div class="col-3">
        <div class="footer-spree-label">
          <%= I18n.t('navigation.categories.women') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.dresses'), spree.nested_taxons_path('women/dresses') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.shirts_and_blouses'), spree.nested_taxons_path('women/shirts-and-blouses') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.t_shirts_and_tops'), spree.nested_taxons_path('women/tops-and-t-shirts') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.sweaters'), spree.nested_taxons_path('women/sweaters') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.skirts'), spree.nested_taxons_path('women/skirts') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.jackets_and_coats'), spree.nested_taxons_path('women/jackets-and-coats') %>
        </div>
      </div>
      <div class="col-3">
        <div class="footer-spree-label">
          <%= I18n.t('navigation.categories.men') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.shirts'), spree.nested_taxons_path('men/shirts') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.t_shirts'), spree.nested_taxons_path('men/t-shirts') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.sweaters'), spree.nested_taxons_path('men/sweaters') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.jackets_and_coats'), spree.nested_taxons_path('men/jackets-and-coats') %>
        </div>
      </div>
      <div class="col-3">
        <div class="footer-spree-label">
          <%= I18n.t('navigation.categories.sportswear') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.tops'), spree.nested_taxons_path('sportswear/tops') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.pants'), spree.nested_taxons_path('sportswear/pants') %>
        </div>
        <div class="pt-2">
          <%= link_to I18n.t('navigation.subcategories.sweatshirts'), spree.nested_taxons_path('sportswear/sweatshirts') %>
        </div>
      </div>
      <div class="col-3">
        <div class="footer-spree-label">
          <%= Spree.t('nav_bar.my_account') %>
        </div>
        <div class="pt-2">
          <% if try_spree_current_user && spree.respond_to?(:account_path) %>
            <%= link_to Spree.t('nav_bar.my_orders'), spree.account_path(anchor: "account-my-orders") %>
          <% elsif defined?(spree_login_path) %>
            <%= link_to Spree.t('nav_bar.log_in'), spree_login_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'spree/shared/copyright' %>
</footer>
