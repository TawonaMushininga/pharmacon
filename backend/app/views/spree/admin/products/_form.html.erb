<div data-hook="admin_product_form_fields">

  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-warning no-objects-found">
        Sku Details can be edited in the <%= link_to "Sku Editor", "https://www.sdometools.com/tools/sku_editor.php?pid=#{@product.id}", target: '_blank' %>
      </div>
    </div>

    <div class="col-md-8" data-hook="admin_product_form_left">

      <%= fake_input_field @product.name, :name %>

      <div data-hook="admin_product_form_name"></div>

      <%= fake_input_field @product.available_on, :available_on %>

      <%= fake_input_field @shipping_category.try(:name), :shipping_category %>

      <%= fake_input_field @tax_category.try(:name), :tax_category %>
    </div>

    <div class="col-md-4" data-hook="admin_product_form_right">

      <%= fake_input_field @product.cost_price, :cost_price %>

      <%= fake_input_field @product.cost_currency, :cost_currency %>

      <% unless @product.has_variants? %>

        <div data-hook="admin_product_form_sku">
          <%= fake_input_field @product.sku, :sku %>
        </div>
      <% end %>
    </div>

  </div>

  <div data-hook="admin_product_form_additional_fields"></div>

</div>

<% unless Rails.env.test? %>
  <script>
    $('.select2-container').css();
  </script>
<% end %>
