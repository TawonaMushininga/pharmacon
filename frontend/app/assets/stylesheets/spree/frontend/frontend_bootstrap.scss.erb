@import "bootstrap";

div#logo a {
  font-size: 1.8em;
  margin: 0;
  padding: 0;
  line-height: 0;
}

div#spree-header {
  background-color: #563d7c;
}

.glyphicon {
  display: inline-block;
  height: 1em;
  padding-left: 20px;
  background-repeat: no-repeat;
}

.glyphicon-shopping-cart {
  background-image: asset-url("shopping-cart");
}

.glyphicon-minus-sign {
  background-image: asset-url("minus-circle");
}

