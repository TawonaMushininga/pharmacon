  <%= select_tag "#{param_prefix}[preferred_operator_max]", options_for_select(Spree::Promotion::Rules::ItemQuantity::OPERATORS_MAX.map{|o| [Spree.t("item_quantity_rule.operators.#{o}"),o]}, promotion_rule.preferred_operator_max), { class: 'select2 select_item_quantity fullwidth' } %>
