<% permitted_params = params.permit(*filtering_params) %>

<div data-hook="search_results">
  <% if @products.empty? %>
    <% if permitted_params[:keywords].present? && permitted_params.to_h.one? %>
      <%= render 'spree/products/no_results' %>
    <% else %>
      <%= render 'spree/products/no_results_with_filters', permitted_params: permitted_params %>
    <% end %>
  <% else %>
    <% if params[:keywords] %>
      <div class="container d-md-flex pt-md-5">
        <div class="plp-results-text text-uppercase mx-md-auto py-md-5">
          <%= "#{@products.total_count} #{Spree.t('plp.results_for')} '#{params[:keywords].upcase}'" %>
        </div>
      </div>
    <% elsif not @taxon %>
      <div id="no-taxon-banner">
        <div class="container">
          <%= lazy_image(
            src: asset_path('homepage/products.jpg'),
            alt: 'products-banner',
            width: 1110,
            height: 300,
            class: 'w-100 d-none d-md-block'
          ) %>
        </div>
      </div>
    <% end %>

    <%= render 'spree/products/filter_and_sort_mobile_buttons' %>
    <%= render 'spree/products/sort_desktop', permitted_params: permitted_params %>
    <div class="container mb-3 d-md-flex">
      <%= render 'spree/products/filters_desktop', permitted_params: permitted_params %>
      <div class="col-md-12 col-lg-9" data-hook="homepage_products">
        <div class="row">
          <% cache(params.permit!.merge(current_currency: current_currency)) do %>
            <% @products.each do |product| %>
              <div id="product_<%= product.id %>" class="col-sm-4 col-6 mb-3 mb-md-4 pr-0 pl-md-4 pl-sm-4">
                <%= render 'spree/shared/product', product: product, image_class: 'product-component-plp-image' %>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="row pl-md-4 pl-sm-4">
          <div class="col-12">
            <div class="plp-pagination d-none d-lg-flex">
              <%= paginate @products, window: 2, theme: 'twitter-bootstrap-4' %>
            </div>

            <div class="plp-pagination d-lg-none">
              <%= paginate @products, window: 1, theme: 'twitter-bootstrap-4' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="sort-by-overlay" class="plp-overlay" style="display: none;">
  <div class="container">
    <div class="plp-overlay-header">
      <%= Spree.t('plp.sort_by') %>
      <%= inline_svg_tag 'close.svg', id: 'sort-by-overlay-hide-button' %>
    </div>
  </div>
  <div class="plp-overlay-header-border"></div>
  <ul class="pt-1 plp-overlay-ul">
    <li class="p-3">
      <% is_checked = params[:sort_by] == 'default' || params[:sort_by].blank? %>

      <%= link_to url_for(permitted_params.merge(sort_by: 'default')), class: "spree-radio-label spree-sort-option #{'spree-sort-option--checked' if is_checked}" do %>
        <%= radio_button_tag 'sort_by', 'default', is_checked %>
        <span class="spree-radio-label-custom-input"></span>
        <%= Spree.t('plp.default') %>
      <% end %>
    </li>

    <li class="p-3">
      <% is_checked = params[:sort_by] == 'newest-first' %>

      <%= link_to url_for(permitted_params.merge(sort_by: 'newest-first')), class: "spree-radio-label spree-sort-option #{'spree-sort-option--checked' if is_checked}" do %>
        <%= radio_button_tag 'sort_by', 'newest-first', is_checked %>
        <span class="spree-radio-label-custom-input"></span>
        <%= Spree.t('plp.newest_first') %>
      <% end %>
    </li>

    <li class="p-3">
      <% is_checked = params[:sort_by] == 'price-high-to-low' %>

      <%= link_to url_for(permitted_params.merge(sort_by: 'price-high-to-low')), class: "spree-radio-label spree-sort-option #{'spree-sort-option--checked' if is_checked}" do %>
        <%= radio_button_tag 'sort_by', 'price-high-to-low', is_checked %>
        <span class="spree-radio-label-custom-input"></span>
        <%= Spree.t('plp.price_high_to_low') %>
      <% end %>
    </li>

    <li class="p-3">
      <% is_checked = params[:sort_by] == 'price-low-to-high' %>

      <%= link_to url_for(permitted_params.merge(sort_by: 'price-low-to-high')), class: "spree-radio-label spree-sort-option #{'spree-sort-option--checked' if is_checked}" do %>
        <%= radio_button_tag 'sort_by', 'price-low-to-high', is_checked %>
        <span class="spree-radio-label-custom-input"></span>
        <%= Spree.t('plp.price_low_to_high') %>
      <% end %>
    </li>
  </ul>
</div>

<%= render 'spree/products/filters_mobile', permitted_params: permitted_params %>

<%= products_structured_data(@products) %>
