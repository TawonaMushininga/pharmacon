<% if content_for?(:page_title) || content_for?(:page_actions) %>
  <div class="content-header <%= "with-page-tabs" if content_for?(:page_tabs) %> page-header col-12">
    <div class="row align-items-center mb-4">
      <% if content_for?(:page_title) %>
        <h1 class="text-left h4 pl-0 mb-0 col-12 <%= content_for?(:page_actions) ? 'col-md-6' : 'col-md-12'  %>">
          <%= yield :page_title %>
          <% if content_for?(:page_title_small) %>
            <small><%= yield :page_title_small %></small>
          <% end %>
        </h1>
      <% end %>

      <% if content_for?(:page_actions) %>
        <div class="page-actions col-6 pr-0 d-none d-lg-block text-right" data-hook="toolbar">
          <%= yield :page_actions %>
        </div>
      <% end %>

      <% if content_for?(:page_tabs) %>
        <ul class="nav nav-tabs w-100 mt-4">
          <%= yield :page_tabs %>
        </ul>
      <% end %>
    </div>
  </div>
<% end %>
