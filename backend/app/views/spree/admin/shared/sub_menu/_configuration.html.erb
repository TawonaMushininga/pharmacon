  <%= configurations_sidebar_menu_item(Spree.t(:return_authorization_reasons), admin_return_authorization_reasons_path) if can? :manage, Spree::ReturnAuthorizationReason %>
  <%= configurations_sidebar_menu_item(Spree.t(:roles), admin_roles_path) if can? :manage, Spree::Role %>
